<% layout('layouts/boilerplate') %> 

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <h3 class="card-title text-center fw-bold">Login</h3>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
                <a class="btn btn-warning mx-3 mb-3" href="/register">Need an account? Register here!</a>
            </div>
        </div>
    </div>
</div>