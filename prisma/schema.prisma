// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String     @id @default(cuid())
  email    String     @unique
  username String     @unique
  hash     String
  games    Game[]
  lists    GameList[]
}

model GameList {
  id       String @id @default(cuid())
  games    Game[]
  listName String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String

  @@unique([listName, authorId])
}

model Game {
  id           String   @id @default(cuid())
  complete     Boolean
  gameName     String
  author       User     @relation(fields: [authorId], references: [id])
  authorId     String
  parentList   GameList @relation(fields: [parentListId], references: [id])
  parentListId String
  cover        String?
}

model igdbGame {
  id            Int     @id @unique
  name          String
  cover         String?
  versionParent String?
  parentGame    String?
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
